<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la aplicación basado en Material Design con soporte para modo claro y oscuro -->
    <style name="Theme.JuegoDColores" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color principal utilizado en la barra superior, botones destacados, etc. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color secundario aplicado a botones u otros elementos interactivos -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Color de la barra de estado (status bar) -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fondo principal de la ventana de la aplicación -->
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>